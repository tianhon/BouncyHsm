@using BouncyHsm.Client
@if (this.Version != Pkcs11SpecVersion.V2_40)
{
    <sub>@this.GetVersion()</sub>
}

@code {
    [Parameter]
    [EditorRequired]
    public Pkcs11SpecVersion Version
    {
        get;
        set;
    }

    private string GetVersion()
    {
        return this.Version switch
        {
            Pkcs11SpecVersion.V2_40 => "v2.40",
            Pkcs11SpecVersion.V3_1 => "v3.1",
            Pkcs11SpecVersion.V3_2 => "v3.2",
            _ => throw new InvalidProgramException($"Enum value {this.Version} is not supported")
        };
    }
}
